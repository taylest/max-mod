<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|bottom" android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="4.0dip" />
            <solid android:color="@color/control_bg" />
            <corners android:radius="2.5dip" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|bottom" android:id="@android:id/secondaryProgress" android:left="1.0dip" android:right="1.0dip" android:bottom="1.0dip">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="2.0dip" />
                <solid android:color="@color/white_30" />
                <corners android:radius="1.5dip" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|bottom" android:id="@android:id/progress" android:left="1.0dip" android:right="1.0dip" android:bottom="1.5dip">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="2.0dip" />
                <solid android:color="@color/white" />
                <corners android:radius="1.5dip" />
            </shape>
        </scale>
    </item>
</layer-list>
